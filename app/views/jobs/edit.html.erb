<!DOCTYPE html>
<html>
<head>
	<title></title>
	<style type="text/css">
		.form-group {
			display: inline-block;
			width: 400px;
			margin-left: 10px;
		}
		#endform {
			margin-left: 20px;
		}
	</style>
</head>
<body>
<h1>Edit Job</h1>
<div id="newjob">
<form action="/jobs/<%= @job.id %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="_method" value="patch">
		<div class="form-group">
		    <label for="job[company]">Company</label>
		    <input type="text" class="form-control" name="job[company]" value="<%= @job.company %>">	    
		  </div>
		  <div class="form-group">
		    <label for="job[description]">Description</label>
		    <input type="text" class="form-control" name="job[description]" value="<%= @job.description %>">
		  </div>
		  <div class="form-group">
		    <label for="job[estimate]">Estimate</label>
		    <input type="integer" class="form-control" name="job[estimate]" value="<%= @job.estimate %>">
		  </div>
		  <div class="form-group">
		    <label for="job[billed]">Billed</label>
		    <input type="integer" class="form-control" name="job[billed]" value="<%= @job.billed %>">
		  </div>
		  <div class="form-group">
		    <label for="job[paid]">Paid</label>
		    <input type="integer" class="form-control" name="job[paid]" value="<%= @job.paid %>">
		  </div><br>
	<div id="endform">

		<label>Completed</label>
		  <% if @job.completed %>
		  <div class="form-check">
		  <input class="form-check-input" type="radio" name="job[completed]" value="true" checked>
		  <label class="form-check-label">
		    Yes
		  </label>
		</div>	
		<div class="form-check">
		  <input class="form-check-input" type="radio" name="job[completed]" value="false">
		  <label class="form-check-label" >
		    No
		  </label><br><br>
		</div>

		  <% else %>
		  
		 <div class="form-check">
		  <input class="form-check-input" type="radio" name="job[completed]" value="true">
		  <label class="form-check-label" for="exampleRadios2">
		    Yes
		  </label>
		</div>	
		<div class="form-check">
		  <input class="form-check-input" type="radio" name="job[completed]" value="false" checked>
		  <label class="form-check-label" for="exampleRadios1">
		    No
		  </label><br><br>
		</div>
		<% end %>
		<button type="submit" class="btn btn-primary">Edit Job</button>
	</div>		
	</form>	
	
</form>	
</div>

</body>
</html>